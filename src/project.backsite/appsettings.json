{
  "urls": "http://localhost:9005",
  "rootUrl": "http://localhost:9005",
  "AllowedHosts": "*",
  "Serilog": {
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "RollingFile",
        "Args": {
          "pathFormat": "logs/{Date}.log"
        }
      }
    ],
    "Enrich": [
      "FromLogContext"
    ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    }
  },
  "ConnectionStrings": {
    "Db1": "server=192.168.1.190;port=3306;uid=root;pwd=root;database=ProjectTemplate"
  },
  "Upload": {
    "LimitSize": 4194304, //4M
    "TotalLimitSize": 2147483648, //2G
    "AllowExts": [ ".jpg", ".jpeg", ".bmp", ".mp3", ".mp4", ".txt", ".doc", ".docx" ],
    "UploadPath": "./up",
    "RequestPath": "/up"
  }
}
